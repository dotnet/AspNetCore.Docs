@using ContosoUniversity.Models

<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Department?.Name
    </dd>
    <dt class="col-sm-2">
        Budget
    </dt>
    <dd class="col-sm-10">
        @Department?.Budget.ToString("C")
    </dd>
    <dt class="col-sm-2">
        Start date
    </dt>
    <dd class="col-sm-10">
        @Department?.StartDate.ToShortDateString()
    </dd>
    <dt class="col-sm-2">
        Administrator
    </dt>
    <dd class="col-sm-10">
        @if (Department?.Administrator is null)
        {
            @:There is no administrator.
        }
        else
        {
            @Department?.Administrator?.FullName
        }
    </dd>
</dl>

@code {
    /// <summary>
    /// New <see cref="Department"/>.
    /// </summary>
    [Parameter]
    public Department? Department { get; set; }
}
