@using ContosoUniversity.Models

<dl class="row">
    <dt class="col-sm-2">
        Last name
    </dt>
    <dd class="col-sm-10">
        @Instructor?.LastName
    </dd>
    <dt class="col-sm-2">
        First name
    </dt>
    <dd class="col-sm-10">
        @Instructor?.FirstMidName
    </dd>
    <dt class="col-sm-2">
        Hire date
    </dt>
    <dd class="col-sm-10">
        @Instructor?.HireDate.ToShortDateString()
    </dd>
</dl>

@code {
    /// <summary>
    /// New <see cref="Instructor"/>.
    /// </summary>
    [Parameter]
    public Instructor? Instructor { get; set; }
}
